#:kivy 2.2.0

<CommonScreen@FloatLayout>:
    size_hint: None, None
    size: 800, 1400
    
    # Background color (white)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: 0,0
            size: 800, 1400
        
        # header and navBar
        Color:
            rgba: 0,1,1,1
        Rectangle:
            pos: 0, 1250
            size: 800, 150
        Rectangle:
            pos: 0,0
            size: 800, 150

    Button:
        size_hint: None, None
        pos: 690, 1290
        size: 75, 75
        background_color: 0.2, 0.6, 0.9, 1
        on_press: app.toAccount()

    Button:
        size_hint: None, None
        pos: 35, 1290
        size: 75, 75
        background_color: 0.2, 0.6, 0.9, 1
        on_press: app.toHome()

    Button:
        size_hint: None, None
        pos: 35, 37
        size: 150, 75
        background_color: 0.2, 0.6, 0.9, 1
        on_press: app.toShortlist()
    
    Button:
        size_hint: None, None
        pos: 325, 37
        size: 150, 75
        background_color: 0.2, 0.6, 0.9, 1
        on_press: app.toSwiping()
    
    Button:
        size_hint: None, None
        pos: 615, 37
        size: 150, 75
        background_color: 0.2, 0.6, 0.9, 1
        on_press: app.toAccount()
    
    Label:
        id: head
        text: root.title if hasattr(root, 'title') else "HOME"
        font_size: 64
        color: 0, 0, 0, 1
        size_hint: None, None
        pos: 50, 1300
        size: 700, 50
        bold: True

    
<HomeScreen>:
    CommonScreen:
        title: "HOME"

        Label:
            id: discover
            text: "Discover"
            font_size: 50
            color: 0, 0, 0, 1
            size_hint: None, None
            pos: 90, 1150
            size: 100, 50
            halign: 'left'
            bold: True
            underline: True
        
        Label:
            id: shortlist
            text: "Shortlist"
            font_size: 50
            color: 0, 0, 0, 1
            size_hint: None, None
            pos: 90, 750
            size: 100, 50
            halign: 'left'
            bold: True
            underline: True


<AccountScreen>:
    CommonScreen:
        title: "ACCOUNT"

        # Button to navigate
        Button:
            text: "Go home"
            size_hint: None, None
            pos: 50, 800
            size: 700, 200
            background_color: 0.2, 0.6, 0.9, 1
            on_press: app.toHome()

<ShortlistScreen>:
    CommonScreen:
        title: "SHORTLIST"

<SwipingScreen>:
    CommonScreen:
        title: " "

<ListingScreen>:
    CommonScreen:
        title: "LISTING"
